{
  "apps": [{
    "name": "nextjs-app",
    "script": "npm",
    "args": "run start",
    "instances": "1",
    "wait_ready": true,
    "autorestart": true,
    "max_restarts": 3,
    "watch": false,
    "error_file": "log/err.log",
    "out_file": "log/out.log",
    "log_file": "log/combined.log",
    "time": true,
    "env": {
      "NODE_ENV": "production"
    }
  }]
}
